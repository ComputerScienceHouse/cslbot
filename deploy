#!/bin/bash
set -e

# do docs
cd gh-pages
../gendocs.sh
git add .
if ! [ -z "`git status --porcelain`" ]; then
	git commit -m 'update docs'
fi
git push
cd ..

# update master ro dev
git checkout master
git pull
if ! git merge --ff-only dev; then
	git checkout dev
	figlet Please rebase dev
	exit 1
fi
git push
git checkout dev
./reload
cd /home/ircbot/bot
sudo -u ircbot git pull
if [ "$1" == "restart" ]; then
	sudo /etc/init.d/ircbot restart
else
	sudo -u ircbot ./reload
fi
